<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/black"
    android:focusable="false"
    android:focusableInTouchMode="false"    
    android:padding="@dimen/padding_activity" >

    <ImageView
        android:id="@+id/ivFeature"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/meat_market_sel" />

    <TextView
        android:id="@+id/tvFeaturePercentage"
        style="@style/mTextPercentageInPubInfo"
        android:layout_marginLeft="@dimen/padding_activity_half"
        android:layout_toRightOf="@+id/ivFeature"
        android:text="38%" />

    <TextView
        android:id="@+id/tvFeature"
        style="@style/mTextYellowMedium"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvFeaturePercentage"
        android:text="Meet Market" />

