            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/padding_activity"
            android:layout_marginRight="@dimen/padding_activity"
            android:layout_marginTop="160dp"
            android:gravity="top"
