<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="#000000" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#000000" >

            <TextView
                android:id="@+id/row_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="BIG BAND NIGHT"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffb800"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/row_desc_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_name_textView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:text="Sport Bar"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cbSendCoupon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_activity"
                android:button="@drawable/checkbox" />
            
            <!-- <Button
                android:id="@+id/change_pub_owner_icon_button"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_rect_shape4"
                android:text="SEND COUPON"
                android:textColor="#ffb800"
                android:textSize="15sp" /> -->
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
